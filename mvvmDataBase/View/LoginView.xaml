<Window x:Class="mvvmDataBase.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mvvmDataBase.View" xmlns:viewModel="clr-namespace:mvvmDataBase.VewModel" xmlns:customcontrols="clr-namespace:DataBase.CustomControls"
        mc:Ignorable="d"
        Title="LoginView" Height="447" Width="500" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/BackGroundDark.jpg"/>
        </Grid.Background>
        <Image Source="/Resources/closeIco.png" Grid.Column="2" Style="{StaticResource ImageClose}" MouseUp="Image_MouseUp" Panel.ZIndex="2"/>
        <Border CornerRadius="15" Grid.Column="1" Grid.Row="1" MinWidth="250" Background="#59000000">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Sign In" Style="{StaticResource HederStyle}" Foreground="White" Background="Transparent" Margin="0,10,0,0"/>
                <Border BorderThickness="1" BorderBrush="White"  CornerRadius="5" Margin="10,40,10,0">
                    <Grid Margin="7 9">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="/Resources/loginIco.png" Height="20" />
                        <TextBlock x:Name="textLogin" MouseDown="textLogin_MouseDown" Text="Login" Style="{StaticResource textHint}" Background="Transparent"/>
                        <TextBox x:Name="txtLogin" Style="{StaticResource TextBoxStyle}" TextChanged="txtLogin_TextChanged" Background="Transparent" BorderThickness="0" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                    </Grid>
                </Border>
                <Border BorderThickness="1" BorderBrush="White"  CornerRadius="5" Margin="10,40,10,0">
                    <Grid Margin="7 9">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="/Resources/passwordIco.png" Height="20" />
                        <TextBlock x:Name="textPassword" MouseDown="textPassword_MouseDown" Text="Password" Style="{StaticResource textHint}" Background="Transparent"/>
                        <TextBox x:Name="txtPassword" Style="{StaticResource TextBoxStyle}" TextChanged="txtPassword_TextChanged" Background="Transparent" BorderThickness="0" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </Border>
                <TextBlock  Text="{Binding ErrorMessage}"  TextWrapping="Wrap" Foreground="#ff4d6d" FontSize="14" FontWeight="Medium" Margin="5"/>
                <Button Content="Sign In" Style="{StaticResource  mainButton}" Command="{Binding LoginCommand}"/>
                <TextBlock Background="Transparent" Margin="5">У вас нет аккаунта?<Button Background="Transparent" Command="{Binding LoginCommand}"><TextBlock Background="Transparent" Foreground="Blue" Text="Зарегестрируетесь!"/></Button></TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
