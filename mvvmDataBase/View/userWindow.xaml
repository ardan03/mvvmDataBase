<Window x:Class="mvvmDataBase.View.userWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mvvmDataBase.View"
        mc:Ignorable="d"
        Title="userWindow" Height="450" Width="500" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize">
    <Grid Style="{DynamicResource Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Личный Кабинет" Style="{DynamicResource HederStyle}"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Имя" Style="{DynamicResource HederStyle}" Grid.Column="0" Margin="100,25,0,0" />
            <TextBox Style="{DynamicResource TextBoxStyle}" Grid.Column="1" Margin="5,20,5,20" FontSize="30"/>
            <TextBlock Text="User Name" Style="{DynamicResource HederStyle}" Grid.Column="0" Grid.Row="1" Margin="50,25,0,0" />
            <TextBox Style="{DynamicResource TextBoxStyle}" Grid.Row="1" Grid.Column="1" Margin="5,20,5,20" FontSize="30"/>
            <TextBlock Text="Пароль" Style="{DynamicResource HederStyle}" Grid.Column="0" Grid.Row="2" Margin="70,25,0,0" />
            <TextBox Style="{DynamicResource TextBoxStyle}" Grid.Row="2" Grid.Column="1" Margin="5,20,5,20" FontSize="30"/>
            <Button Style="{DynamicResource ButtonStyle}" Grid.Column="0" Grid.Row="3" Content="Редактировать" Margin="10"/>
            <Button Style="{DynamicResource ButtonStyle}" Grid.Column="1" Grid.Row="3" Content="Выйти" Margin="10"/>
        </Grid>
    </Grid>
</Window>
